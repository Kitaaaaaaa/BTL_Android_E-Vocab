<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="388dp"
    android:id="@+id/lo_detail"
    android:visibility="gone">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/bt_detail_Cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="295dp"
            android:backgroundTint="@color/white"
            android:text="X"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_detail_Terminology"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:hint="Terminology"/>
            <TextView
                android:id="@+id/tv_detail_type"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="Type"
                android:textSize="20sp"

                android:gravity="center_vertical"
                android:layout_marginLeft="20dp" />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_detail_Definity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:hint="Definity"/>
        <TextView
            android:id="@+id/tv_detail_example"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:hint="Example"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_detail_edit"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:textColor="@color/black"
                android:text="Edit"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/bt_detail_Delete"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:text="Delete"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>