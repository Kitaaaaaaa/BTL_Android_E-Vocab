<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lo_add_vocab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="388dp"
    android:padding="20dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_add_Terminology"
                android:layout_width="230dp"
                android:layout_height="50dp"
                android:hint="Terminology"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_add_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:hint="Type"
                android:textSize="20sp" />

        </LinearLayout>

        <EditText
            android:id="@+id/edt_add_Definition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Definity"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_add_example"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Example"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_add_add_vocab"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:background="@drawable/rounded_border"
                android:text="Add"
                android:textColor="@color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btn_add_Cancel_vocab"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_border"
                android:text="Cancel"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>



