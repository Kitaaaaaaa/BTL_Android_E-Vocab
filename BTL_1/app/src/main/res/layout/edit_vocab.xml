<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="388dp"
    android:id="@+id/lo_edit_vocab"
    android:visibility="gone">
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:orientation="vertical"
        android:background="@drawable/rectangle"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/tv_edit_Terminology"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:hint="Terminology"/>
            <Spinner
                android:id="@+id/sp_edit_type"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/rounded_border"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:autofillHints="Type"/>
        </LinearLayout>
        <EditText
            android:id="@+id/tv_edit_Definity"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:hint="Definity"/>
        <EditText
            android:id="@+id/tv_edit_example"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:hint="Example"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_edit_save"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:textColor="@color/black"
                android:text="Save"/>
            <Button
                android:id="@+id/bt_edit_Cancel"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:text="Cancel"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>