<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lo_edit_vocab"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="388dp"
    android:padding="20dp"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="295dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical"
        android:padding="20dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/img_edit_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:backgroundTint="@color/white"
            tools:ignore="TouchTargetSizeCheck"
            app:srcCompat="@drawable/close_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_edit_terminology"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                android:hint="Term"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edt_edit_type"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"

                android:text="Type"
                android:textSize="20sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_edit_definition"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Definition"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edt_edit_example"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:hint="Example"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_edit_save_vocab"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_border"
                android:text="Save"
                android:layout_marginLeft="5dp"
                android:textColor="@color/white" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btn_edit_cancel_vocab"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_border"
                android:text="Cancel"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>