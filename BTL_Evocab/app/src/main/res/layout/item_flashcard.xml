<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <!-- Mặt trước -->
    <LinearLayout
        android:id="@+id/frontCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_flashcard_front">

        <TextView
            android:id="@+id/tvFlashCard_term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Term"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:gravity="center" />
    </LinearLayout>

    <!-- Mặt sau -->
    <LinearLayout
        android:id="@+id/backCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_flashcard_back"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="("
            android:textColor="@color/black"
            android:textSize="22sp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tvFlashCard_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:hint="n"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:text=")"
            android:textColor="@color/black"
            android:textSize="22sp" />
        <TextView
            android:id="@+id/tvFlashCard_definition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Definition"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:inputType="textMultiLine"
            android:layout_marginRight="10dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
